spec -> non_term_spec ; term_spec ; rules_list ; axiom_spec ;

non_term_spec -> "non-terminal" ident_list
term_spec -> "terminal" string_ident_list
ident_list -> #ident ident_list_tail
ident_list_tail -> , #ident ident_list_tail | #epsilon
string_ident_list -> element string_ident_list_tail
string_ident_list -> , element string_ident_list | #epsilon

element -> #ident | #string

rules_list -> rule rules_list_tail
rules_list_tail -> ; rule rules_list_tail | #epsilon
rule -> #ident "::->" seqs
seqs -> seq seqs_tail
seqs_tail -> '|' seq seqs_tail | #epsilon
seq -> element seq_tail
seq_tail -> element seq_tail | #epsilon

axiom_spec -> "axiom" #ident


